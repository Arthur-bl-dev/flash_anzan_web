  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "downlevelIteration": true,
    "strictNullChecks": true,
    "strict": true
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "./src/**/*",
    "./tools/**/*"
  ],
  "lib": [
    "WebWorker"
  ]
}
